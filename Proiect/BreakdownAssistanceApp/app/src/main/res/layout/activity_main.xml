<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/main_background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="297dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/getLocationMaps"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/address_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="12dp"
                android:background="@drawable/buttons_background"/>

            <ImageView
                android:id="@+id/sendLocationActivity"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/buttons_background"
                android:paddingStart="18dp"
                android:paddingTop="12dp"
                android:paddingEnd="4dp"
                android:paddingBottom="12dp"
                android:src="@drawable/sharelocation"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/nearbyServicesActivity"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/buttons_background"
                android:padding="8dp"
                android:src="@drawable/nearbylocations"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Location"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/getLocationMaps"
                app:layout_constraintStart_toStartOf="@+id/getLocationMaps"
                app:layout_constraintTop_toBottomOf="@+id/getLocationMaps" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share Location"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/sendLocationActivity"
                app:layout_constraintStart_toStartOf="@+id/sendLocationActivity"
                app:layout_constraintTop_toBottomOf="@+id/sendLocationActivity" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nearby Places"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/nearbyServicesActivity"
                app:layout_constraintStart_toStartOf="@+id/nearbyServicesActivity"
                app:layout_constraintTop_toBottomOf="@+id/nearbyServicesActivity" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="297dp">

            <ImageView
                android:id="@+id/emergencyListBtn"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/buttons_background"
                android:padding="12dp"
                android:src="@drawable/emergencylist"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.497" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supply List"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/emergencyListBtn"
                app:layout_constraintStart_toStartOf="@+id/emergencyListBtn"
                app:layout_constraintTop_toBottomOf="@+id/emergencyListBtn" />

            <ImageView
                android:id="@+id/getWeather"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/buttons_background"
                android:padding="12dp"
                android:src="@drawable/address_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>